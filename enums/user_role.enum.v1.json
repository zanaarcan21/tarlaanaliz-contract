{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserRole",
  "description": "Enumeration of user roles for RBAC (Role-Based Access Control)",
  "type": "string",
  "enum": [
    "FARMER",
    "PILOT",
    "KIOSK_OPERATOR",
    "COOP_ADMIN",
    "UNION_ADMIN",
    "SYSTEM_ADMIN"
  ],
  "enumDescriptions": {
    "FARMER": "Farmer - Field owner who requests aerial surveys",
    "PILOT": "Drone pilot - Executes flight missions",
    "KIOSK_OPERATOR": "Kiosk operator - Manages SD card intake at collection points",
    "COOP_ADMIN": "Cooperative administrator - Manages local cooperative",
    "UNION_ADMIN": "Union administrator - Manages regional union of cooperatives",
    "SYSTEM_ADMIN": "System administrator - Full system access"
  },
  "permissions": {
    "FARMER": [
      "field:create",
      "field:read:own",
      "field:update:own",
      "field:delete:own",
      "mission:read:own",
      "report:read:own"
    ],
    "PILOT": [
      "mission:read:assigned",
      "mission:update:assigned",
      "mission:complete",
      "flight:upload"
    ],
    "KIOSK_OPERATOR": [
      "intake:create",
      "intake:read:own_kiosk",
      "batch:upload"
    ],
    "COOP_ADMIN": [
      "field:read:coop",
      "mission:create",
      "mission:read:coop",
      "mission:assign",
      "user:read:coop",
      "report:read:coop"
    ],
    "UNION_ADMIN": [
      "field:read:union",
      "mission:read:union",
      "user:read:union",
      "user:create",
      "report:read:union",
      "analytics:read:union"
    ],
    "SYSTEM_ADMIN": [
      "*:*"
    ]
  },
  "hierarchy": {
    "SYSTEM_ADMIN": 6,
    "UNION_ADMIN": 5,
    "COOP_ADMIN": 4,
    "KIOSK_OPERATOR": 3,
    "PILOT": 2,
    "FARMER": 1
  },
  "metadata": {
    "version": "1.0.0",
    "lastUpdated": "2025-01-24",
    "usedIn": [
      "schemas/core/user.v1.schema.json",
      "api/platform_public.v1.yaml"
    ]
  }
}
