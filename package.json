{
  "name": "@tarlaanaliz/contracts",
  "version": "1.0.0",
  "description": "Contract-first JSON Schema, OpenAPI, and enum definitions for TarlaAnaliz platform",
  "private": true,
  "type": "module",
  "keywords": [
    "json-schema",
    "draft-2020-12",
    "openapi",
    "contracts",
    "tarlaanaliz"
  ],
  "author": "TarlaAnaliz Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "validate": "node --loader ts-node/esm tools/validate.ts",
    "validate:schemas": "npm run validate -- --schemas-only",
    "validate:enums": "npm run validate -- --enums-only",
    "validate:openapi": "npm run validate -- --openapi-only",
    "validate:forbidden": "npm run validate -- --check-forbidden",
    "validate:unevaluated": "npm run validate -- --check-unevaluated",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "types:gen": "npm run types:gen:ts && npm run types:gen:schema-index",
    "types:gen:ts": "node --loader ts-node/esm tools/generate-types.ts",
    "types:gen:schema-index": "node --loader ts-node/esm tools/generate-schema-index.ts",
    "openapi:bundle": "npm run openapi:bundle:public && npm run openapi:bundle:internal && npm run openapi:bundle:edge",
    "openapi:bundle:public": "redocly bundle api/platform_public.v1.yaml --output dist/openapi/platform_public.v1.bundle.yaml",
    "openapi:bundle:internal": "redocly bundle api/platform_internal.v1.yaml --output dist/openapi/platform_internal.v1.bundle.yaml",
    "openapi:bundle:edge": "redocly bundle api/edge_local.v1.yaml --output dist/openapi/edge_local.v1.bundle.yaml",
    "openapi:validate": "redocly lint api/platform_public.v1.yaml api/platform_internal.v1.yaml api/edge_local.v1.yaml",
    "breaking-change:detect": "node --loader ts-node/esm tools/breaking-change-detector.ts",
    "pin:version": "node --loader ts-node/esm tools/pin-version.ts",
    "sync:repos": "bash tools/sync-to-repos.sh",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,yaml,yml,md}\"",
    "clean": "rm -rf dist/ generated/ coverage/ .jest-cache/",
    "prebuild": "npm run clean && npm run validate && npm test",
    "build": "npm run types:gen && npm run openapi:bundle",
    "ci:gate": "npm run validate && npm run test:ci && npm run breaking-change:detect && npm run openapi:validate",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.5.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ],
    "schemas/**/*.json": [
      "npm run validate:schemas"
    ],
    "enums/**/*.json": [
      "npm run validate:enums"
    ],
    "api/**/*.yaml": [
      "npm run openapi:validate"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "tools/**/*.ts",
      "!tools/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tarlaanaliz/tarlaanaliz-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/tarlaanaliz/tarlaanaliz-contracts/issues"
  },
  "homepage": "https://github.com/tarlaanaliz/tarlaanaliz-contracts#readme"
}
